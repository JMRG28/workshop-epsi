{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}
{% block titre %} Connexion {% endblock %}
{% block body %}
    {% if error %}
        <div class="m-3 alert alert-danger">
            {{ error.messageKey | trans(error.messagedata,'security') }}
        </div>
    {% endif %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="row">
        <div class="col-lg-4 col-md-2 col-1"></div>
        <div class="col-lg-4 col-md-8 col-10">
            <div class="card border-primary" >
                <div class="card-header">Connectez vous!</div>
                <div class="card-body">
                    <form method="post" action="{{ path('login') }}">
                        <div class="form-group">
                            <label>Pseudo : </label>
                            <input type="text" required name="_username" placeholder="Email" class="form-control" >
                        </div>

                        <div class="form-group">
                            <label>Mot de Passe : </label>
                            <input type="password" required name="_password" placeholder="Mot de passe" class="form-control">
                        </div>
                        <div class="m-4 text-center">
                            <input class="btn btn-primary m-1" type="submit" value="Connexion !">
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>


    <div class="col-lg-4 col-md-2 col-1"></div>
    </div>
{% endblock %}



