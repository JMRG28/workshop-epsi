{% extends 'base.html.twig' %}

{% block title %}Modification{% endblock %}
{% block titre %} Modification du profil {% endblock %}
{% block body %}
    <div class="row">
        <div class="col-lg-4 col-md-2 col-1"></div>
        <div class="col-lg-4 col-md-8 col-10">
            <div class="card border-primary" >
                <div class="card-header">Profil</div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-6">
                            {{ form_start(form) }}
                            {{ form_row(form.nom,{
                                "attr":{"placeholder":"Saisir votre nom"},
                                "label":"Nom"
                            }) }}
                            {{ form_row(form.prenom,{
                                "attr":{"placeholder":"Saisir votre Prénom"},
                                "label":"Prénom"
                            }) }}
                        </div>
                        <div class="col-6">
                            {{ form_row(form.imageFile,{
                                "attr":{"placeholder":"Image","onchange":"previewFile(this);"},

                            }) }}
                            <img id="previewImg" src="{{ asset('images/logo/pixel.png') }}" width="100%" alt="Placeholder">
                        </div>
                    </div>
                    {{ form_row(form.email,{
                        "attr":{"placeholder":"Saisir votre mail"},
                        "label":"Email"
                    }) }}
                    {{ form_widget(form) }}

                    <div class="m-4 text-center">
                        <input class="btn btn-primary m-1" type="submit" value="Valider !">
                        {{ form_end(form) }}
                    </div>
                </div>

            </div>
        </div>
        <div class="col-lg-4 col-md-2 col-1"></div>
    </div>
{% endblock %}



