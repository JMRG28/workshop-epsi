{% extends 'base.html.twig' %}

{% block title %}Hello !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="container">
    <div class="row">
        <div class="col-xs-3"></div>
        <div class="col-xs-5 center">
            <h1>Voici la page de test :</h1>
        </div>
    </div>
    <div class="row">
        Inserer ici l'image du test 
    </div>
    <div class="row">
        <div class="col-xs-12 center">
            <h4>Question  :  {{ Question}} </h4> 
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 center">
            {% if Reponses is not empty %}
    ...
                <form action="{{ '/tests'}}" method="post"> 
                    <input  type="hidden" value ="{{Question}}" name="Reponse"
                                    >
                    {% for i in 0..Reponses %}
                        <article>
                            <br>
                                <div class="form-group">
                                    <input class="form-check-input" type="checkbox" value ="{{Question}}" name="Reponse"
                                    >
                                    <label class="form-check-label" for="{{loop.index}}">{{Reponses[i]}}</label>
                                </div>                   
                            <br>
                            
                        </article>       
                        {% endfor %}
                        <div class="form-group">
                            <button type="submit" class="btn btn-success">Validez!</button>
                        </div>
                    </form>      
                        <br />
            {% endif %}

        </div>
    </div>
</div>
{% endblock %}